<p>ESTA ES LA PÁGINA DE CONTACTO</p>
<form method="POST" action="@Url.Action("EnviarContacto", "Home")">
    <input type="hidden" name="id" value="1" />
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input name="nombre" type="text" placeholder="ingresá tu nombre..." required />
    </div>
    <div class="form-group">
        <label for="mail">Mail</label>
        <input name="mail" type="text" placeholder="ingresá tu mail..." required />
    </div>    
    <div class="form-group">
        <label for="consulta">Consulta</label>
        <textarea name="consulta" placeholder="dejanos tu consulta..." required></textarea>
    </div>    
    <input type="submit" value="Enviar"/>
</form>